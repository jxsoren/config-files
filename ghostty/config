# Theme
theme = catppuccin-mocha

# Fonts
font-family = JetBrains Mono Nerd Font
font-size = 18
font-thicken = true
font-feature = -liga
font-feature = -calt
adjust-underline-position = 40%
adjust-underline-thickness = -60%

# Window
window-padding-x = 10
window-padding-y = 10

# Background
background-opacity = 0.7
background-blur = 20

# MacOS
macos-titlebar-style = transparent
macos-icon = xray

# Cursor
cursor-style = block

# Keybinds (trigger=action)
keybind = cmd+r=reload_config
keybind = cmd+opt+up=new_split:up
keybind = cmd+opt+down=new_split:down
keybind = cmd+opt+left=new_split:left
keybind = cmd+opt+right=new_split:right

